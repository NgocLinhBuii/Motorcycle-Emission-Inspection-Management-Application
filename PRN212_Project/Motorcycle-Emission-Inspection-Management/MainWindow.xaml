<Window x:Class="Motorcycle_Emission_Inspection_Management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hệ Thống Quản lý đăng kiểm khí thải xe máy"
        Width="1100" Height="650"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F7"
        ResizeMode="CanResizeWithGrip">

    <!-- Thêm ScrollViewer bao toàn bộ DockPanel -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <DockPanel>
            <!-- Header -->
            <Border DockPanel.Dock="Top"
                    Height="60"
                    Background="#2C3E50"
                    CornerRadius="0,0,6,6"
                    SnapsToDevicePixels="True">
                <TextBlock Text="Hệ Thống Kiểm Định Khí Thải Xe Máy"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="10"/>
            </Border>

            <!-- Sidebar -->
            <Border DockPanel.Dock="Left"
                    Width="200"
                    Background="#34495E">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Menu"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="20,15,0,10"/>

                        <Button Content="🏠  Trang chủ" Click="Home_Click"/>
                        <Button Content="🚗  Quản lý xe" Click="Vehicle_Click"/>
                        <Button Content="🧪  Kiểm định" Click="Inspection_Click"/>
                        <Button Content="📊  Thống kê" Click="Statistics_Click"/>
                        <Button Content="👤  Tài khoản" Click="Account_Click"/>
                        <Button Content="🚪  Đăng xuất" Click="Logout_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Main content với khả năng cuộn -->
            <Border Background="White" Margin="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ContentControl x:Name="MainContent" />
                </ScrollViewer>
            </Border>
        </DockPanel>
    </ScrollViewer>
</Window>
