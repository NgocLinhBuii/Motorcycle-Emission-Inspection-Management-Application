<Window x:Class="Motorcycle_Emission_Inspection_Management.Inspector.InspectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Công nhân kiểm định" Height="500" Width="850"
        WindowStartupLocation="CenterScreen" Background="#FFCAE4E2" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock Text="Ghi nhận kết quả kiểm định" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <ComboBox x:Name="cbVehicle" DisplayMemberPath="PlateNumber" Width="300" Margin="0,0,0,10"/>
            <TextBox x:Name="txtCO2"  Margin="0,5"/>
            <TextBox x:Name="txtHC" Margin="0,5"/>

            <ComboBox x:Name="cbResult" Width="120" Margin="0,5">
                <ComboBoxItem Content="Pass"/>
                <ComboBoxItem Content="Fail"/>
            </ComboBox>

            <TextBox x:Name="txtComment" Margin="0,5" Height="60" AcceptsReturn="True"/>

            <Button Content="Lưu kết quả" Width="150" Click="BtnSave_Click" Margin="0,10,0,0"/>
            <TextBlock x:Name="txtNotify" Foreground="Green" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
