<Page x:Class="Motorcycle_Emission_Inspection_Management.InspectionFacility.AssignInspectorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Motorcycle_Emission_Inspection_Management.InspectionFacility"
      Title="Phân công công nhân kiểm định"
      Background="#F3F4F6">

    <Grid>
        <Border Background="White"
                CornerRadius="12"
                Padding="40"
                Margin="40"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                Effect="{DynamicResource DropShadowEffect}">

            <StackPanel Width="600" HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Tiêu đề -->
                <TextBlock Text="📋 Phân công công nhân kiểm định"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#1F2937"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Biển số xe -->
                <StackPanel>
                    <TextBlock Text="Biển số xe"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#374151"
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="PlateComboBox"
                              Height="38"
                              FontSize="14"
                              BorderBrush="#D1D5DB"
                              BorderThickness="1"
                              Padding="8,2"
                              DisplayMemberPath="PlateNumber"
                              SelectedValuePath="VehicleId"/>
                </StackPanel>

                <!-- Ngày kiểm định -->
                <StackPanel>
                    <TextBlock Text="Ngày kiểm định"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#374151"
                               Margin="0,8,0,4"/>
                    <DatePicker x:Name="InspectDatePicker"
                                Height="38"
                                FontSize="14"
                                BorderBrush="#D1D5DB"
                                BorderThickness="1"/>
                </StackPanel>

                <!-- Công nhân kiểm định -->
                <StackPanel>
                    <TextBlock Text="Công nhân kiểm định"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#374151"
                               Margin="0,8,0,4"/>
                    <ComboBox x:Name="InspectorComboBox"
                              Height="38"
                              FontSize="14"
                              BorderBrush="#D1D5DB"
                              BorderThickness="1"
                              Padding="8,2"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">

                    <!-- Nút phân công -->
                    <Button Content="✅ Phân công"
                            Width="140" Height="42"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#2563EB"
                            Cursor="Hand"
                            Click="AssignButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>

    <Page.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                          BlurRadius="8"
                          ShadowDepth="2"
                          Color="#999999"
                          Opacity="0.2"/>
    </Page.Resources>
</Page>
