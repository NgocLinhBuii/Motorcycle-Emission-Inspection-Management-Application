<Window x:Class="Motorcycle_Emission_Inspection_Management.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống"
        Width="1200" Height="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Grid>
        <!-- Background image -->
        <Image Source="pack://application:,,,/Assets/bg.jpg"
               Stretch="UniformToFill"
               Opacity="1"
               Panel.ZIndex="-5"/>

        <!-- Overlay title -->
        <TextBlock Text="ĐĂNG KÝ KIỂM ĐỊNH KHÍ THẢI"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="#FFFFFF"
                   Opacity="0.8"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"/>

        <!-- Main Login Card -->
        <Border Background="White"
                CornerRadius="25"
                Width="600"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="40"
                Effect="{DynamicResource DropShadowEffect}">

            <StackPanel>
                <!-- Logo -->
                <Image Source="pack://application:,,,/Assets/logo.jpg"
                       Width="80"
                       Height="80"
                       />

                <!-- Title -->
                <TextBlock Text="Chào mừng trở lại"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Email -->
                <TextBlock Text="Email" FontSize="15" Margin="5,5,0,0"/>
                <TextBox x:Name="EmailAddressTextBox"
                         Height="42"
                         FontSize="14"
                         Padding="10"
                         Background="#F9F9F9"
                         BorderBrush="#DADADA"
                         BorderThickness="1"
                         Margin="0,5"/>

                <!-- Password -->
                <TextBlock Text="Mật khẩu" FontSize="15" Margin="5,15,0,0"/>
                <PasswordBox x:Name="PasswordTextBox"
                             Height="42"
                             FontSize="14"
                             Padding="10"
                             Background="#F9F9F9"
                             BorderBrush="#DADADA"
                             BorderThickness="1"
                             Margin="0,5"/>

                <!-- Register Section -->
                <TextBlock Text="Chưa có tài khoản?" 
                           FontSize="14" 
                           HorizontalAlignment="Center" 
                           Margin="0,20"/>
                <Button Content="Đăng ký"
                        Width="130" Height="45"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Background="#F39C12"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        Click="RegisterButton_Click">
                    <Button.Effect>
                        <DropShadowEffect Color="#999" BlurRadius="6" ShadowDepth="2"/>
                    </Button.Effect>
                </Button>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,30,0,0">
                    <Button Content="Đăng nhập"
                            Width="130" Height="45"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#27AE60"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="LoginButton_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="#999" BlurRadius="6" ShadowDepth="2"/>
                        </Button.Effect>
                    </Button>

                    <Button Content="Thoát"
                            Width="130" Height="45"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#C0392B"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="QuitButton_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="#999" BlurRadius="6" ShadowDepth="2"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Drop shadow effect resource -->
        <Grid.Resources>
            <DropShadowEffect x:Key="DropShadowEffect"
                              Color="Black"
                              BlurRadius="15"
                              ShadowDepth="4"
                              Direction="270"
                              Opacity="0.1"/>
        </Grid.Resources>
    </Grid>
</Window>
