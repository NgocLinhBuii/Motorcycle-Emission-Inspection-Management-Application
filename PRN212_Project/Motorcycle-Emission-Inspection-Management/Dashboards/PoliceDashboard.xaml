<Window x:Class="Motorcycle_Emission_Inspection_Management.Dashboards.PoliceDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cảnh sát giao thông – Dashboard"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid>
        <StackPanel Margin="30" HorizontalAlignment="Left">

            <!-- Tiêu đề -->
            <TextBlock Text="Xin chào, Cảnh sát giao thông"
                       FontSize="26" FontWeight="Bold"
                       Foreground="#333333"
                       Margin="0 0 0 20"/>

            <!-- Tra cứu -->
            <Button Content="🔍 Tra cứu thông tin phương tiện"
                    Width="712" Height="44"
                    Background="#007BFF" Foreground="White"
                    FontSize="16" FontWeight="Bold"
                    Margin="0 0 0 10"
                    BorderThickness="0"
                    Click="BtnLookup_Click"/>

            <!-- Ghi nhận vi phạm -->
            <Button Content="📝 Ghi nhận vi phạm"
                    Width="711" Height="40"
                    Background="#FFC107" Foreground="White"
                    FontSize="14"
                    Margin="0 0 0 10"
                    BorderThickness="0"
                    Click="BtnViolation_Click"/>

            <!-- Báo cáo -->
            <Button Content="📊 Xem báo cáo thống kê"
                    Width="713" Height="44"
                    Background="#28A745" Foreground="White"
                    FontSize="16"
                    Margin="0 0 0 10"
                    BorderThickness="0"
                    Click="BtnReport_Click"/>

            <!-- Đăng xuất -->
            <Button Content="🚪 Đăng xuất"
                    Width="120" Height="40"
                    Background="White" Foreground="#007BFF"
                    FontSize="16"
                    BorderBrush="#007BFF" BorderThickness="2"
                    Click="BtnLogout_Click"/>
        </StackPanel>
    </Grid>
</Window>
