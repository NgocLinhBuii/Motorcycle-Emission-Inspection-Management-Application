<Window x:Class="Motorcycle_Emission_Inspection_Management.Dashboards.InspectorDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard – Công nhân kiểm định"
        Height="600" Width="900"
        Background="White"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="Dashboard - Công nhân kiểm định"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#333333"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Nút chức năng -->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" RenderTransformOrigin="0.5,0.5" Height="222">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.751"/>
                    <RotateTransform/>
                    <TranslateTransform X="1.115"/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <Button Content="Danh sách xe được giao hôm nay"
                    Width="300" Height="50"
                    Margin="0,10"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="White"
                    Background="#007BFF"
                    Click="ViewAssignedBtn_Click"/>
            <Button Content="Ghi kết quả kiểm định"
                    Width="300" Height="50"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="White"
                    Background="#007BFF"
                    Click="EnterResultsBtn_Click"/>
            <Button Content="LOG OUT"
         Width="300" Height="50"
         Margin="0,10"
         FontSize="16"
         FontWeight="Bold"
         Foreground="White"
         Background="#007BFF" Click="Button_Click"
        />
        </StackPanel>
    </Grid>
</Window>
