<Window x:Class="Motorcycle_Emission_Inspection_Management.Dashboards.InspectionFacilityDashboardPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard Cơ sở kiểm định"
        Height="600" Width="900"
        Background="White"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="Dashboard - Cơ sở kiểm định"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#333333"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Các nút chức năng -->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button Content="Danh sách yêu cầu kiểm định"
                    Width="300" Height="50" Margin="0,10"
                    FontSize="16" FontWeight="Bold"
                    Background="#007BFF" Foreground="White"
                    Click="ViewRequestsBtn_Click"/>

            <Button Content="Phân công công nhân kiểm định"
                    Width="300" Height="50" Margin="0,10"
                    FontSize="16" FontWeight="Bold"
                    Background="#007BFF" Foreground="White"
                    Click="AssignInspectorBtn_Click"/>

            <Button Content="Gửi báo cáo định kỳ"
                    Width="300" Height="50" Margin="0,10"
                    FontSize="16" FontWeight="Bold"
                    Background="#007BFF" Foreground="White"
                    Click="FacilityReportBtn_Click"/>
            <Button Content="LOG OUT"
         Width="300" Height="50" Margin="0,10"
         FontSize="16" FontWeight="Bold"
         Background="#007BFF" Foreground="White" Click="Button_Click"
         />
        </StackPanel>
    </Grid>
</Window>
