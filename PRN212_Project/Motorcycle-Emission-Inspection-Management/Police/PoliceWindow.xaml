<Window x:Class="Motorcycle_Emission_Inspection_Management.Police.PoliceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cảnh sát giao thông - Tra cứu đăng kiểm" Height="500" Width="850"
        WindowStartupLocation="CenterScreen" Background="#FFCAE4E2" ResizeMode="NoResize">
    <Grid >
        <StackPanel>
            <TextBlock Text="Nhập biển số cần tra cứu" FontWeight="Bold"/>
            <TextBox x:Name="txtPlate" Margin="0,5"/>
            <Button Content="Tra cứu" Width="100" Click="BtnSearch_Click"/>
            <ListBox x:Name="lstResults" Margin="0,10" Height="200"/>
        </StackPanel>
    </Grid>
</Window>
