<Page x:Class="Motorcycle_Emission_Inspection_Management.Police.ViolationRecordPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Motorcycle_Emission_Inspection_Management.Police"
        Title="Ghi nhận vi phạm"
        Width="960" Height="580"
        Background="#F9FAFB">

    <Border Background="White"
            Margin="20"
            Padding="30"
            CornerRadius="10"
            BorderBrush="#DDE2E5"
            BorderThickness="1"
            Effect="{DynamicResource DropShadowEffect}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ===== Tiêu đề ===== -->
            <TextBlock Text="🚨 Ghi nhận vi phạm khí thải"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       HorizontalAlignment="Left"
                       Margin="226,-35,0,60"/>

            <!-- ===== Thông tin phương tiện ===== -->
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        Margin="0,0,0,10">
                <TextBlock Text="Biển số xe:"
                           Width="120"
                           FontSize="15"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="cbPlateNumber"
                          Width="250"
                          Height="32"
                          FontSize="14"/>
            </StackPanel>

            <!-- ===== Trạm & ngày kiểm định ===== -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="0,0,0,10">
                <TextBlock Text="Trạm kiểm định:"
                           Width="120"
                           FontSize="15"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="cbStation"
                          Width="250"
                          Height="32"
                          FontSize="14"
                          DisplayMemberPath="Name"
                          SelectedValuePath="StationId"/>

                <TextBlock Text="Ngày kiểm tra:"
                           Width="120"
                           FontSize="15"
                           VerticalAlignment="Center"
                           Margin="30,0,0,0"/>
                <DatePicker x:Name="dpDate"
                            Width="160"
                            Height="32"
                            FontSize="14"/>
            </StackPanel>

            <!-- ===== Lỗi vi phạm ===== -->
            <GroupBox Grid.Row="3"
                      Header="📝 Lỗi vi phạm"
                      FontSize="16"
                      FontWeight="Bold"
                      Margin="0,10,0,10"
                      Padding="10">
                <StackPanel>
                    <CheckBox x:Name="chkEmission" Content="Khí thải vượt chuẩn"/>
                    <CheckBox x:Name="chkExpired"  Content="Quá hạn đăng kiểm"/>
                    <CheckBox x:Name="chkNoPapers" Content="Không mang giấy tờ xe"/>

                    <CheckBox x:Name="chkOther"
                              Content="Khác..."
                              Checked="chkOther_Checked"
                              Unchecked="chkOther_Unchecked"/>
                    <TextBox x:Name="tbOther"
                             Height="60"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Visibility="Collapsed"
                             Margin="20,5,0,0"
                             FontSize="14"/>
                </StackPanel>
            </GroupBox>

            <!-- ===== Nút điều hướng ===== -->
            <StackPanel Grid.Row="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button Content="💾 Xử phạt"
                        Width="110" Height="40"
                        Background="#28A745"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="14"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnSave_Click"/>
                <!--<Button Content="❌ Thoát"
                        Width="100" Height="40"
                        Background="White"
                        Foreground="#007BFF"
                        BorderBrush="#007BFF"
                        BorderThickness="2"
                        FontWeight="SemiBold"
                        FontSize="14"
                        Cursor="Hand"
                        Click="btnQuit_Click"/>-->
            </StackPanel>
        </Grid>
    </Border>

    <Page.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Color="Gray"
                          Opacity="0.15"/>
    </Page.Resources>
</Page>
