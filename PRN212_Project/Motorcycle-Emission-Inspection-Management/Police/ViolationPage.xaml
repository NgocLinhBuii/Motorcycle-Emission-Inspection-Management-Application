<Window x:Class="Motorcycle_Emission_Inspection_Management.Police.ViolationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ghi nhận vi phạm"
        Height="520" Width="920"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Tra cứu thông tin phương tiện" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Biển số:" Width="80"/>
                <TextBox x:Name="txtPlateNumber" Width="200"/>
                <Button Content="Tra cứu" Click="Search_Click" Margin="10,0"/>
            </StackPanel>

            <DataGrid x:Name="dgVehicleInfo" AutoGenerateColumns="False" Margin="0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Hãng" Binding="{Binding Brand}" />
                    <DataGridTextColumn Header="Model" Binding="{Binding Model}" />
                    <DataGridTextColumn Header="Ngày kiểm định" Binding="{Binding InspectionDate}" />
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" />
                    <DataGridTextColumn Header="Mức CO2" Binding="{Binding Co2Emission}" />
                    <DataGridTextColumn Header="Trạm" Binding="{Binding StationName}" />
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock Text="Ghi nhận lỗi vi phạm" FontSize="18" FontWeight="SemiBold" Margin="0,20,0,10"/>
            <ComboBox x:Name="cbViolationType" Width="300"/>
            <Button Content="Lập biên bản" Click="RecordViolation_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
