<Window x:Class="Motorcycle_Emission_Inspection_Management.EmissionTestingFacility.StationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cơ sở kiểm định" Height="500" Width="850"
        WindowStartupLocation="CenterScreen" Background="#FFCAE4E2" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock Text="Danh sách xe đăng ký kiểm định" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListView x:Name="lstAppointments" Height="320" Margin="0,0,0,10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Biển số" DisplayMemberBinding="{Binding PlateNumber}" Width="120"/>
                        <GridViewColumn Header="Ngày hẹn" DisplayMemberBinding="{Binding AppointmentDate}" Width="180"/>
                        <GridViewColumn Header="Chủ xe" DisplayMemberBinding="{Binding OwnerName}" Width="150"/>
                        <GridViewColumn Header="Trạng thái" DisplayMemberBinding="{Binding Status}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Content="Làm mới danh sách" Width="160" Click="BtnRefresh_Click"/>
        </StackPanel>
    </Grid>
</Window>
