<Window x:Class="Motorcycle_Emission_Inspection_Management.VehicleOwner.InspectionHistoryPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Lịch sử kiểm định"
        Width="960" Height="580"
        WindowStartupLocation="CenterScreen"
        Background="#F9FAFB">

    <Border Background="White"
            Margin="20"
            Padding="20"
            CornerRadius="10"
            BorderBrush="#DDE2E5"
            BorderThickness="1"
            Effect="{DynamicResource DropShadowEffect}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề -->
            <TextBlock Text="📋 Lịch sử kiểm định phương tiện"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"/>

            <!-- DataGrid -->
            <DataGrid x:Name="dgInspectionHistory"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      FontSize="14"
                      AlternatingRowBackground="#F0F8FF"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      BorderBrush="#DDD"
                      RowHeight="36"
                      SelectionMode="Single"
                      Margin="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Biển số xe" Binding="{Binding Vehicle.PlateNumber}" Width="*" />
                    <DataGridTextColumn Header="Cơ sở kiểm định" Binding="{Binding Station.Name}" Width="*" />
                    <DataGridTextColumn Header="Ngày kiểm định" Binding="{Binding InspectionDate, StringFormat=dd/MM/yyyy}" Width="*" />
                    <DataGridTextColumn Header="Kết quả" Binding="{Binding Result}" Width="*" />
                    <DataGridTextColumn Header="CO₂ (g/km)" Binding="{Binding Co2emission}" Width="*" />
                    <DataGridTextColumn Header="HC (ppm)" Binding="{Binding Hcemission}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Nút Thoát -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 20 0 0">
                <Button Content="❌ Thoát"
                        Width="110"
                        Height="36"
                        Background="#007BFF"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="14"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnExit_Click"/>
            </StackPanel>
        </Grid>
    </Border>

    <!-- Hiệu ứng đổ bóng -->
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Color="Gray"
                          Opacity="0.15"/>
    </Window.Resources>
</Window>
