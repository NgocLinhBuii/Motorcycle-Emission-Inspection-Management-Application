<Page x:Class="Motorcycle_Emission_Inspection_Management.VehicleOwner.VehicleListPage"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Motorcycle_Emission_Inspection_Management.VehicleOwner"
        Title="Danh sách phương tiện"
        Width="960" Height="580"
        Background="#F8F9FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="Danh sách phương tiện đã đăng ký"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>

        <!-- Bộ lọc -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    Margin="0,15,0,10">
            <StackPanel>
                <TextBlock Text="Biển số xe" FontSize="14" FontWeight="SemiBold" Foreground="#333"/>
                <TextBox x:Name="txtPlateFilter"
                         Width="180"
                         Height="30"
                         Padding="5"
                         Background="White"
                         BorderBrush="#CED4DA"
                         BorderThickness="1"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Model" FontSize="14" FontWeight="SemiBold" Foreground="#333"/>
                <TextBox x:Name="txtModelFilter"
                         Width="180"
                         Height="30"
                         Padding="5"
                         Background="White"
                         BorderBrush="#CED4DA"
                         BorderThickness="1"/>
            </StackPanel>

            <Button x:Name="btnSearch"
                    Content="🔍 Tìm kiếm"
                    Width="120" Height="36"
                    Background="#007BFF"
                    Foreground="White"
                    FontWeight="SemiBold"
                    FontSize="14"
                    Cursor="Hand"
                    BorderThickness="0"
                    Margin="0,18,0,0"
                    Click="btnSearch_Click"/>
        </StackPanel>

        <!-- Bảng dữ liệu -->
        <DataGrid x:Name="dgVehicles"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="All"
                  FontSize="14"
                  AlternatingRowBackground="#F0F2F5"
                  BorderBrush="#DDE2E5"
                  Margin="0,10"
                  SelectionMode="Single"
                  SelectionChanged="dgVehicles_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Biển số" Binding="{Binding PlateNumber}" Width="*" />
                <DataGridTextColumn Header="Hãng" Binding="{Binding Brand}" Width="*" />
                <DataGridTextColumn Header="Dòng xe" Binding="{Binding Model}" Width="*" />
                <DataGridTextColumn Header="Năm SX" Binding="{Binding ManufactureYear}" Width="*" />
                <DataGridTextColumn Header="Số máy" Binding="{Binding EngineNumber}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Nút Thoát -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,10,0">
            <Button x:Name="btnQuit"
                    Content="🚪 Thoát"
                    Width="110" Height="36"
                    Background="White"
                    BorderBrush="#007BFF"
                    BorderThickness="2"
                    Foreground="#007BFF"
                    FontSize="14"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="btnQuit_Click"/>
        </StackPanel>
    </Grid>
</Page>
