<Window x:Class="Motorcycle_Emission_Inspection_Management.VehicleOwner.NotificationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông báo"
        Height="520" Width="920"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Tiêu đề -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Nút -->
        </Grid.RowDefinitions>

        <!-- ===== TIÊU ĐỀ ===== -->
        <TextBlock Text="Danh sách thông báo"
                   FontSize="24" FontWeight="Bold"
                   Foreground="#333333"
                   Margin="0 0 0 15"/>

        <!-- ===== BẢNG THÔNG BÁO ===== -->
        <DataGrid x:Name="dgNotifications"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  AlternatingRowBackground="#F0F8FF"
                  FontSize="14">
            <DataGrid.Columns>
                <!-- Thời gian gửi -->
                <DataGridTextColumn Header="Thời gian"
                                    Width="160"
                                    Binding="{Binding SentDate, StringFormat=dd/MM/yyyy HH:mm}"/>
                <!-- Nội dung -->
                <DataGridTextColumn Header="Nội dung"
                                    Binding="{Binding Message}"
                                    Width="*"/>
                <!-- Đã đọc -->
                <DataGridCheckBoxColumn Header="Đã đọc"
                                        Binding="{Binding IsRead}"
                                        Width="80"/>
                <!-- Nút đánh dấu -->
                <DataGridTemplateColumn Header=" " Width="120" IsReadOnly="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Đánh dấu đã đọc"
                    Padding="6 2"
                    FontSize="12"
                    Background="#28A745"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="MarkRead_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRead}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

        <!-- ===== NÚT ===== -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 10 0 0">
            <Button Content="Tải lại"
                    Width="100" Height="36"
                    Background="#007BFF" Foreground="White"
                    FontWeight="Bold"
                    Margin="0 0 10 0"
                    Click="btnReload_Click"/>

            <Button Content="Thoát"
                    Width="100" Height="36"
                    Background="White"
                    BorderBrush="#007BFF"
                    BorderThickness="2"
                    Foreground="#007BFF"
                    FontWeight="Bold"
                    Click="btnQuit_Click"/>
        </StackPanel>
    </Grid>
</Window>
