<Window x:Class="Motorcycle_Emission_Inspection_Management.VehicleOwner.RegisterInspectionPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Đăng ký kiểm định khí thải"
        Width="960" Height="580"
        Background="#F9FAFB"
        WindowStartupLocation="CenterScreen">

    <Border Background="White"
            Margin="30"
            CornerRadius="12"
            Padding="30"
            BorderBrush="#DDE2E5"
            BorderThickness="1"
            Effect="{DynamicResource DropShadowEffect}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề -->
            <TextBlock Text="🛵 Đăng ký kiểm định khí thải"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Nội dung -->
            <StackPanel Grid.Row="1"
                        Orientation="Vertical"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,10,0,0">

                <!-- Biển số -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Biển số xe:"
                               Width="150"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Foreground="#333"/>
                    <ComboBox x:Name="cbPlateNumbers"
                              Width="300"
                              Height="35"
                              FontSize="15"
                              Padding="5"/>
                </StackPanel>

                <!-- Trạm kiểm định -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Trạm kiểm định:"
                               Width="150"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Foreground="#333"/>
                    <ComboBox x:Name="cbStations"
                              Width="300"
                              Height="35"
                              FontSize="15"
                              Padding="5"/>
                </StackPanel>

                <!-- Ngày kiểm định -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Ngày kiểm định:"
                               Width="150"
                               FontSize="16"
                               Foreground="#333"/>
                    <DatePicker x:Name="dpInspectionDate"
                                Width="300"
                                Height="35"
                                FontSize="15"
                                SelectedDate="{x:Static sys:DateTime.Today}"
                                DisplayDateStart="{x:Static sys:DateTime.Today}"/>
                </StackPanel>
            </StackPanel>

            <!-- Nút -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,30,0,0">
                <Button Content="✔ Đăng ký"
                        Width="150" Height="42"
                        Background="#28A745"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnRegister_Click"/>

                <Button Content="❌ Thoát"
                        Width="130" Height="42"
                        Background="White"
                        BorderBrush="#007BFF"
                        BorderThickness="2"
                        Foreground="#007BFF"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="btnExit_Click"/>
            </StackPanel>
        </Grid>
    </Border>

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Color="Gray"
                          Opacity="0.2"/>
    </Window.Resources>
</Window>
